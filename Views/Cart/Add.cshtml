@model TiendaOnline.Models.Product

@{
    ViewData["Title"] = "Add to Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Cart</h1>

<div>
    <h4>Amount to Buy</h4>
    <hr />
    <form asp-action="AddToCart">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Picture)
            </dt>
            <dd class="col-sm-10">
                <img src="@Url.Content("~")/Content/Images/@Model.Picture"
                     alt="@Model.Name"
                     width="200" />
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Brand)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Brand)
            </dd>

            <dd class="col-sm-12" style="display: none;">
                <input name="id" type="number" class="form-control" value="@Html.DisplayFor(model => model.Id)" readonly required />
                <input name="name" type="text" class="form-control" value="@Html.DisplayFor(model => model.Name)" readonly required />
                <input name="picture" type="text" class="form-control" value="@Html.DisplayFor(model => model.Picture)" readonly required />
                <input name="price" type="number" class="form-control" value="@Html.DisplayFor(model => model.Price)" readonly required />
            </dd>

            <dt class="col-sm-2">
                Amount to Buy
            </dt>
            <dd class="col-sm-10">
                <input name="amount" type="number" class="form-control" value="1" required />
            </dd>
        </dl>
        <div class="form-group">
            <input type="submit" value="Add to Cart" class="btn btn-primary" />
        </div>
    </form>
</div>
